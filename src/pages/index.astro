    }

    // Event listeners
    window.addEventListener("scroll", () => {
      updateStickyNav();
      updateBackToTop();
    });

    document
      .getElementById("back-to-top")
      ?.addEventListener("click", scrollToTop);

    // Initialize on load
    document.addEventListener("DOMContentLoaded", () => {
      updateStickyNav();
      updateBackToTop();
      setupSmoothScroll();
      setupMobileMenu();
