---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="A performance engineering framework by Den Odell with practical guidance for building fast, responsive systems. Learn how to design for speed across web, mobile, backend, and desktop."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="twitter:creator" content="@denodell" />
    <meta name="author" content="Den Odell" />
    <meta property="og:site_name" content="Fast by Default" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;0,900;1,400&family=Lora:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="font-serif">
    <slot />

    <!-- Footer -->
    <footer
      class="bg-stone-900 dark:bg-stone-950 text-stone-300 dark:text-stone-400 py-12 border-t-4 border-double border-stone-900 dark:border-stone-100"
    >
      <div class="max-w-6xl mx-auto px-6 text-center">
        <div class="inline-block py-2">
          <p
            class="font-display text-2xl font-bold text-white dark:text-stone-100"
          >
            Fast by Default
          </p>
        </div>

        <p
          class="mb-8 font-sans text-xs tracking-wider uppercase text-stone-500 dark:text-stone-500"
        >
          &copy; {new Date().getFullYear()}&nbsp;<a
            href="https://denodell.com?utm_source=fastbydefault&utm_medium=website&utm_campaign=footer"
            class="hover:text-stone-300 dark:hover:text-stone-400 transition-colors"
            >Den Odell</a
          >
        </p>

        <h1 class="text-sm font-bold text-gray-100 mb-1">
          Projects by Den Odell:
        </h1>
        <p class="text-sm">
          <a
            href="https://denodell.com"
            class="text-gray-300 hover:text-gray-100">DenOdell.com</a
          >
          <span class="mx-2 text-gray-600">•</span>
          <a
            href="https://frontendpatterns.dev"
            class="text-gray-300 hover:text-gray-100">Frontend Patterns</a
          >
          <span class="mx-2 text-gray-600">•</span>
          <a
            href="https://fastbydefault.com"
            class="text-gray-300 hover:text-gray-100">Fast by Default</a
          >
        </p>
      </div>
    </footer>
  </body>
</html>
